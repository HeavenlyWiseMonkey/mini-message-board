<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div class="header">
            <h1 class="title"><%= title %></h1>
            <button class="newMessage" onclick="location.href='/new'">New Message</button>
        </div>
        <% let i=0 %>
        <% messages.forEach((message) => { %>
            <div class="message">
                <div>
                    <p class="user"><%= message.username %></p>
                    <p class="messageText"><%= message.text %></p>
                </div>
                <button onclick="location.href='/message-details/<%= i %>'" id="<%= i %>">Message Details</button>
            </div>
            <% i++ %>
        <% }) %>
    </body>
</html>